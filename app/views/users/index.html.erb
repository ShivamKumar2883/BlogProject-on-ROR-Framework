<h1 class="text-center mt-4">Bloggers</h1>
<div class="flickr_pagination mb-2">
  <%= will_paginate @users, :container => false %>
</div>
<div class="container">
  <div class="row justify-content-center">
  <% @users.each do |user| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100 shadow text-center">
          <div class="card-header font-italic">
            <%= link_to user.username, user %>
          </div>
          <div class="card-body d-flex flex-column">
            <div class="card-title flex-grow-1">
              <%= link_to user_path(user) do %>
                <% if user.avatar.attached? %>
                  <%= image_tag user.avatar, class: "rounded-circle", size: "150x150", alt: user.username %>
                <% else %>
                <div class="rounded-circle d-inline-flex align-items-center justify-content-center bg-primary text-white" style="width: 150px; height: 150px; font-size: 48px; font-weight: bold;">
  <%= user.username.first.upcase %>
</div>
                <% end %>
              <% end %>
            </div>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <div class="mt-auto">
            <%= link_to "View profile", user , class: "btn btn-outline-success" %>
            <% if logged_in? %>
              <% if user == current_user %>
                <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
              <% end %>
              <% if current_user.admin? %>
                <%= button_to "Delete user", user_path(user), class: "btn btn-outline-danger mt-1 mb-3", method: :delete,
           form: { data: { turbo_confirm: "Are you sure you want to delete the user account and all associated articles?" } }%>
              <% end %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>
              Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </small>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
<div class="flickr_pagination mb-4">
  <%= will_paginate @users, :container => false %>
</div>